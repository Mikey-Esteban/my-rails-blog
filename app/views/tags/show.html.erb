<div class="container">
  <div class="card" style="width: 18rem;">
    <div class="card-header text-white bg-dark">
      <h5>Articles tagged with <%= @tag.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @tag.articles.each do |article| %>
        <li class="list-group-item"><%= link_to article.title, article_path(article) %></li>
      <% end %>
      <li class="list-group-item"><%= link_to 'Back to all tags', tags_path %></li>
    </ul>
  </div>
</div>
