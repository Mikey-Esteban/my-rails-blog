<div class="container">
  <div class="card">
    <div class="card-header">
      <h5>Comment by <%= comment.name %></h5>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p class='comment'><%= comment.comment %></p>
        <footer class="blockquote-footer">Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</footer>
      </blockquote>
    </div>
  </div>
</div>
